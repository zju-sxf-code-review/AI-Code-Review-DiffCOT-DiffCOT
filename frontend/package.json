{
  "name": "diffcot",
  "private": true,
  "version": "1.0.0",
  "description": "AI-powered Code Review System",
  "author": "DiffCOT Team",
  "license": "MIT",
  "type": "module",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build && npm run electron:build",
    "lint": "eslint .",
    "preview": "vite preview",
    "electron": "wait-on tcp:5173 && tsc -p tsconfig.electron.json && electron .",
    "electron:build": "tsc -p tsconfig.electron.json",
    "dev:electron": "concurrently -k \"npm run dev\" \"npm run electron\"",
    "pack": "npm run build && electron-builder --config electron-builder.config.cjs --dir",
    "dist": "npm run build && electron-builder --config electron-builder.config.cjs",
    "dist:mac": "npm run build && electron-builder --config electron-builder.config.cjs --mac",
    "dist:win": "npm run build && electron-builder --config electron-builder.config.cjs --win",
    "dist:linux": "npm run build && electron-builder --config electron-builder.config.cjs --linux"
  },
  "dependencies": {
    "@types/uuid": "^10.0.0",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "lucide-react": "^0.561.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-markdown": "^10.1.0",
    "tailwind-merge": "^3.4.0",
    "uuid": "^13.0.0"
  },
  "optionalDependencies": {
    "electron-squirrel-startup": "^1.0.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@tailwindcss/postcss": "^4.1.18",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "autoprefixer": "^10.4.22",
    "concurrently": "^9.2.1",
    "electron": "^39.2.7",
    "electron-builder": "^26.0.12",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.18",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.46.4",
    "vite": "npm:rolldown-vite@7.2.5",
    "wait-on": "^9.0.3"
  },
  "overrides": {
    "vite": "npm:rolldown-vite@7.2.5"
  }
}
